        </form> --}}

        <hr>

        <!-- Project Form -->
        <form id="projectForm" class="form-section mb-5">
            <div class="mb-3">
                <label for="projectTitle" class="form-label">Project Title</label>
                <input type="text" class="form-control" id="projectTitle" required>
            </div>
            <div class="mb-3">
                <label for="projectDescription" class="form-label">Project Description</label>
                <textarea class="form-control" id="projectDescription" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="projectImage" class="form-label">Project Image</label>
                <input type="file" class="form-control" id="projectImage" accept="image/*" required>
            </div>
            <button type="button" class="btn btn-primary" onclick="uploadProject()">Upload Project</button>
        </form>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>

    <script>
        function showForm(formId) {
            const forms = document.getElementsByClassName('form-section');
            for (const form of forms) {
                form.classList.remove('active-section');
            }

            const selectedForm = document.getElementById(formId);
            selectedForm.classList.add('active-section');
        }
    </script>
</body>

